generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id      Int       @id @default(autoincrement())
  name    String
  phone   String
  email   String
  booking Booking[]
}

model Employee {
  id       Int        @id @default(autoincrement())
  name     String
  position String
  email    String
  phone    String
  Cleaning Cleaning[]
}

model Room {
  id       Int        @id @default(autoincrement())
  roomType String
  status   String
  price    Int
  booking  Booking[]
  Cleaning Cleaning[]
}

model Booking {
  id           Int       @id @default(autoincrement())
  guestId      Int
  roomId       Int
  checkInDate  DateTime
  checkOutDate DateTime
  status       String
  payment      Payment[]

  guest Guest @relation(fields: [guestId], references: [id])
  room  Room  @relation(fields: [roomId], references: [id])
}

model Payment {
  id        Int      @id @default(autoincrement())
  bookingId Int
  amount    Int
  date      DateTime

  booking Booking @relation(fields: [bookingId], references: [id])
}

model Cleaning {
  id         Int      @id @default(autoincrement())
  roomId     Int
  employeeId Int
  date       DateTime
  status     String

  room     Room     @relation(fields: [roomId], references: [id])
  employee Employee @relation(fields: [employeeId], references: [id])
}
